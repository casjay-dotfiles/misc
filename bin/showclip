#!/usr/bin/env bash

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
PROG="showclip"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 031120211744-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : showclip --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Thursday, Mar 11, 2021 17:44 EST
# @File          : showclip
# @Description   : Show clipboard
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# main function
__help() {
  printf_help "Usage: showclip | show clipboard contents"
}
main() {
  if [ -f "$SRC_DIR/functions.bash" ]; then local DIR="$SRC_DIR"; else local DIR="$HOME/.local/bin"; fi
  if [[ -f "$DIR/functions.bash" ]]; then
    . "$DIR/functions.bash"
  else
    printf "\t\t\\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $DIR"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  [ "$1" = "--help" ] && __help
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  clip=$(xclip -o -selection clipboard 2>/dev/null || return 1)
  prim=$(xclip -o -selection primary 2>/dev/null || return 1)
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  if [ -n "$clip" ] && [ "$clip" = "$prim" ]; then
    notifications "Clipboard:" "$clip"
  elif [ -n "$clip" ] && [ -n "$prim" ]; then
    notifications "Clipboard:" "$clip"
    notifications "Primary:" "$prim"
  elif [ -n "$clip" ]; then
    notifications "Clipboard:" "$clip"
  elif [ -n "$prim" ]; then
    notifications "Primary:" "$prim"
  else
    notifications "Clipboard:" "There is nothing in your clipboard"
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# end
