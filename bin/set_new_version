#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : set_new_version
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : Set new version recursively
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function

main() {
  DIR="${BASH_SOURCE%/*}"
  if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi
  if [[ -f "$DIR/functions.bash" ]]; then
    source "$DIR/functions.bash"
  else
    echo "\t\tCouldn't source the functions file"
    exit 1
  fi

  [ ! "$1" = "--help" ] || printf_help "Usage: set_new_version"

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  setver="$(date +"%m%d%Y%H%M-git")"
  printf_green "Changing the version to $setver in $1"
  find "$1" -type f -exec sed -i "s/##@Version.*/##@Version     : $setver/g" {} \;
}

main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# end
