#!/usr/bin/env bash

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
PROG="checkup"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
SRC_DIR="${BASH_SOURCE%/*}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 031120210423-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : checkup --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Thursday, Mar 11, 2021 04:23 EST
# @File          : checkup
# @Description   : check for system updates
# @TODO          : make compatible with all package managers
# @Other         : used primarily by i3
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function
__help() {
  printf_help "Usage: checkup  |  Check for package updates"
}
checkup() {
  local DIR="${SRC_DIR:-$PWD}"
  if [[ -f "$DIR/functions.bash" ]]; then
    . "$DIR/functions.bash"
  else
    printf "\t\t\\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $DIR"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  [ "$1" = "--help" ] && __help
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __pacman() { am_i_online && sudo pacman "$@" || return 1; }
  if [ "$(command -v pacman)" ]; then
    notifications "üì¶ Repository Sync" "Checking for package updates..."
    if __pacman -Syyuw --noconfirm; then
      if __pacman -Qu | grep -v "\[ignored\]"; then
        notifications "üéÅ Repository Sync" "Updates available."
      else
        notifications "üì¶ Repository Sync" "Sync complete. No new packages for update."
      fi
      local exitCode=0
    else
      notifications "Error downloading updates."
      local exitCode=1
    fi
    [ -n "${STATUSBAR}" ] && pkill -RTMIN+8 "${STATUSBAR:?}"
  else
    local exitCode=1
  fi
  return "${exitCode:-$?}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
checkup "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end
