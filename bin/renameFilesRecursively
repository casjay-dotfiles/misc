#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : renameFilesRecursively
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : rename Files Recursively function
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function

renameFilesRecursively() {
  local FUNCTDIR="${BASH_SOURCE%/*}"
  if [[ ! -d "$FUNCTDIR" ]]; then DIR="$PWD"; fi
  if [[ -f "$FUNCTDIR/functions.bash" ]]; then source "$FUNCTDIR/functions.bash"; else echo "\t\tCouldn't source the functions file"; exit 1;  fi
  if [[ "$1" = "--help" ]]; then
  printf_help 'usage: renameFilesRecursively "/home/user/my-files" "apple" "orange"'
  printf_help 'Also uses env variables: SEARCH_PATH SEARCH REPLACE TYPE'
  fi

  local SEARCH_PATH="${1:-$SEARCH_PATH}"
  local SEARCH="${2:$SEARCH}"
  local REPLACE="${3:-}"
  local TYPE="${4:-$TYPE}"

  [ -z "$1" ] && [ -z "$SEARCH_PATH" ] && printf_green 'usage: renameFilesRecursively "/home/user/my-files" "apple" "orange"' && exit 1
  [ -z "$2" ] && [ -z "$SEARCH_PATH" ] && printf_green 'usage: renameFilesRecursively "/home/user/my-files" "apple" "orange"' && exit 1

  find "${SEARCH_PATH}" -type ${TYPE:-l,f,d} -name "*${SEARCH}*" | while read FILENAME; do
    NEW_FILENAME="$(echo ${FILENAME} | sed -e "s/${SEARCH}/${REPLACE}/g")"
    [ -f "${FILENAME}" ] && mv "${FILENAME}" "${NEW_FILENAME}"
  done
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
renameFilesRecursively "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
