#!/usr/bin/env bash

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
PROG="putclip"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 031120210233-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : putclip --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Thursday, Mar 11, 2021 02:33 EST
# @File          : putclip
# @Description   : copy input to clipboard
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [[ "$(uname -s)" =~ ^darwin ]]; then
  if [[ -f "$(command -v pbpaste)" ]]; then
    LC_CTYPE=UTF-8 tr -d "\n" | pbpaste
  fi
elif [[ "$(uname -s)" =~ ^linux ]]; then
  if [[ -f "$(command -v xclip)" ]]; then
    xclip -o -s
  fi
else
  [ -f "${TMPDIR:-/tmp}/clipboard" ] && tail -n 1 "${TMPDIR:-/tmp}/clipboard"
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end
