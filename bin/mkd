#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : mkd
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : Create new directories and enter the first one
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function

mkd() {
  DIR="${BASH_SOURCE%/*}"
  if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi
  if [[ -f "$DIR/functions.bash" ]]; then
    source "$DIR/functions.bash"
  else
    echo "\t\tCouldn't source the functions file"
    exit 1
  fi

  CREATE="$1"
  __help() { printf_help "Usage: mkd directorytoCreate"; }
  [ ! "$1" = "--version" ] || get_app_info "$APPNAME"
  [ ! "$1" = "--help" ] || __help
  if [ $# -ne 1 ]; then __help; fi

  typeset dir="$CREATE"
  if [ ! -z "$CREATE" ]; then
    printf_green "Creating $CREATE and entering the directory"
    mkdir -p "$CREATE"
    printf_green "Type exit to return to your previous directory"
    cd "$CREATE" && bash || return 1
  else
    printf_red "Usage: mkd folder"
  fi
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
mkd "$@" 
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
