#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : cmd_exists
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : check if a script exists
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function

cmd_exists() {

  [ ! "$1" = "--help" ] || printf_help "Usage: cmd_exists cmd"

  unalias "$1" >/dev/null 2>&1 || command -v "$1" >/dev/null 2>&1 || return 1
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
cmd_exists "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
