#!/usr/bin/env bash
cmd_exists() {
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  PROG="cmd_exists"
  USER="${SUDO_USER:-${USER}}"
  HOME="${USER_HOME:-${HOME}}"
  SRC_DIR="${BASH_SOURCE%/*}"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  #set opts

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  ##@Version       : 031120210447-git
  # @Author        : Jason Hempstead
  # @Contact       : jason@casjaysdev.com
  # @License       : WTFPL
  # @ReadME        : cmd_exists --help
  # @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
  # @Created       : Thursday, Mar 11, 2021 04:47 EST
  # @File          : cmd_exists
  # @Description   : check if a script exists
  # @TODO          :
  # @Other         :
  # @Resource      :
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Main function
  __version() { app_version; }
  __help() {
    app_help "Usage: cmd_exists cmd  -  cmd_exists bash fish zsh" \
      "-v, --version          -  display version" \
      "-h, --help             -  display help"
  }
  if [ -f "$SRC_DIR/functions.bash" ]; then local DIR="$SRC_DIR"; else local DIR="$HOME/.local/bin"; fi
  if [[ -f "$DIR/functions.bash" ]]; then
    . "$DIR/functions.bash"
  else
    printf "\t\t\\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $DIR"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  case "$1" in
  -v | --version) __version ;;
  -h | --help) __help ;;
  *show) local show=true && shift 1 ;;
  *err*) local error=show && shift 1 ;;
  esac
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  local exitCode=0
  local missing=""
  for f in "$@"; do
    if [ -f "$(command -v "$f" 2>/dev/null)" ] || [ -f "$(type -P "$f" 2>/dev/null)" ]; then
      found+="$f "
      exitCode+=0
    else
      missing="$f "
      exitCode+=1
    fi
  done
  [ "$show" = "true" ] && [ -n "$found" ] && printf_green "$found"
  [ "$show" = "true" ] && [ -n "$found" ] && [ -n "$missing" ] && printf_red "$missing"
  if [ "$error" = "show" ] && [ -n "$missing" ]; then
    printf_red "Missing: $missing"
    exitCode="1"
  fi
  return "${exitCode:-$?}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
cmd_exists "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end
