#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : _muttsync
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : sync your email with mutt
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function

__muttsync() {
  DIR="${BASH_SOURCE%/*}"
  if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi
  if [[ -f "$DIR/functions.bash" ]]; then
    source "$DIR/functions.bash"
  else
    echo "\t\tCouldn't source the functions file"
    exit 1
  fi

  [ ! "$1" = "--help" ] || printf_help "_muttsync    |    sync your email with mutt"

  if cmd_exists mbsync; then
    printf_green "Syncing Mailboxes with mbsync"
    /usr/bin/mbsync -a >/dev/null 2>&1 ||
      printf_red "Mail Sync Failed"
  fi
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
__muttsync "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
