#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : gitforcepush
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : force a git push
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main function

gitforcepush() {
  DIR="${BASH_SOURCE%/*}"
  if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi
  if [[ -f "$DIR/functions.bash" ]]; then
    source "$DIR/functions.bash"
  else
    echo "\t\tCouldn't source the functions file"
    exit 1
  fi

  [ ! "$1" = "--version" ] || get_app_info "$APPNAME"

  [ ! "$1" = "--help" ] || printf_help "Usage: gitforcepush | This will overwrite the remote repo"

  printf_question "Are you sure as this overwrite your remote repo" [y/N]
  read -r -n 1 -s fpush && echo
  if [[ $fpush == "y" || $fpush == "Y" ]]; then
    git push -f
  else
    printf_info "You have cancelled the current operation"
  fi
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
gitforcepush "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
