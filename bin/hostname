#!/usr/bin/env sh
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="$(basename $0)"
USER="$USER"
HOME="$HOME"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#set opts

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version       : 021720212127-git
# @Author        : Jason Hempstead
# @Contact       : jason@casjaysdev.com
# @License       : WTFPL
# @ReadME        : hostname --help
# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Wednesday, Feb 17, 2021 21:43 EST
# @File          : hostname
# @Description   : Set system hostname
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for needed applications
mkdir -p ~/.cache/hostname
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set functions
printf_color() { printf "%b" "$(tput setaf "$1" 2>/dev/null)" "\t\t$2\n" "$(tput sgr0 2>/dev/null)"; }
__help() { printf_color "4" "usage: hostname  |  print system hostname" && exit; }
__hostname() {
  local PATH="/usr/bin:/usr/sbin:/bin:/sbin:/usr/local/bin"
  if [ -f "$(command -v hostname 2>/dev/null)" ]; then
    [ -f ~/.cache/hostname/name ] || command -p hostname "-f" > ~/.cache/hostname/name
    [ -f ~/.cache/hostname/full ] || command -p hostname "-f" > ~/.cache/hostname/full
    [ -f ~/.cache/hostname/short ] || command -p hostname "-s" > ~/.cache/hostname/short
    command -p hostname "$@"
  elif [ -f "$(command -v hostnamectl 2>/dev/null)" ]; then
    shift $#
    [ -f ~/.cache/hostname/name ] || command -p hostnamectl | grep 'hostname:' | awk '{print $3}' > ~/.cache/hostname/name
    command -p hostnamectl | grep 'hostname:' | awk '{print $3}'
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set additional variables
if [ -f /etc/hostname ]; then hostname="$(</etc/hostname)"
elif [ -f ~/.cache/hostname/name ]; then hostname="$(<~/.cache/hostname/name)";
else hostname=""; fi
[ -f ~/.cache/hostname/full ] && hostnamef="$(<~/.cache/hostname/full)" || hostnamef=""
[ -f ~/.cache/hostname/short ] && hostnames="$(<~/.cache/hostname/short)" || hostnames=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main application
case "$1" in
--help)
  shift 1
  __help
  ;;

-f)
  shift 1
  [ -n "$hostnamef" ] && echo $hostnamef || __hostname "-f"
  ;;

-s)
  shift 1
  [ -n "$hostnames" ] && echo $hostnames || __hostname "-s"
  ;;

*)
  [ -n "$hostname" ] && echo $hostname || __hostname "$@"
  ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end
