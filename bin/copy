#!/usr/bin/env bash
copy_main() {
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  PROG="$(basename $0)"
  VERSION="202103231633-git"
  USER="${SUDO_USER:-${USER}}"
  HOME="${USER_HOME:-${HOME}}"
  SRC_DIR="${BASH_SOURCE%/*}"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  #set opts

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  ##@Version       : 202103231633-git
  # @Author        : Jason Hempstead
  # @Contact       : jason@casjaysdev.com
  # @License       : WTFPL
  # @ReadME        : copy --help
  # @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
  # @Created       : Tuesday, Mar 23, 2021 16:33 EDT
  # @File          : copy
  # @Description   : copies a file and shows progress
  # @TODO          :
  # @Other         :
  # @Resource      :
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Main function file
  if [ -f "$SRC_DIR/functions.bash" ]; then
    FUNCTIONS_DIR="$SRC_DIR"
    . "$FUNCTIONS_DIR/functions.bash"
  elif [ -f "$HOME/.local/bin/functions.bash" ]; then
    FUNCTIONS_DIR="$HOME/.local/bin"
    . "$FUNCTIONS_DIR/functions.bash"
  else
    printf "\t\t\033[0;31m%s \033[0m\n" "Couldn't source the functions file from $FUNCTIONS_DIR"
    return 1
  fi
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # helper functions - See github.com/dfmgr/misc/bin/functions.bash
  __version() { app_version; }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __help() {
    app_help "4" "Usage: copy src dest" \
      "-s, --source           -  Specify source" \
      "-d, --dest             -  Specify destination" \
      "-c, --config           -  create config file" \
      "-a, --all              -  show all options" \
      "-l, --list             -  used by completions" \
      "-v, --version          -  display version" \
      "-h, --help             -  display help"
    exit $?
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  __gen_config() {
    printf_green "Generating the config file in"
    printf_green "$COPY_CONFIG_DIR/$COPY_CONFIG_FILE"
    [ -d "$COPY_CONFIG_DIR" ] || mkdir -p "$COPY_CONFIG_DIR"
    [ -f "$COPY_CONFIG_DIR/$COPY_CONFIG_FILE" ] &&
      cp -Rf "$COPY_CONFIG_DIR/$COPY_CONFIG_FILE" "$COPY_CONFIG_DIR/$COPY_CONFIG_FILE.$$"
    cat <<EOF >"$COPY_CONFIG_DIR/$COPY_CONFIG_FILE"
# Settings for copy
COPY_CUSTOM_COMMAND=''

EOF
    if [ -f "$COPY_CONFIG_DIR/$COPY_CONFIG_FILE" ]; then
      printf_green "Your config file for copy has been created"
      true
    else
      printf_red "Failed to create the config file"
      false
    fi
  }
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Defaults
  local exitCode="" COPY_CONFIG_FILE="" COPY_CONFIG_DIR="" COPY_OPTIONS_DIR=""
  local COPY_CONFIG_FILE="settings.conf"
  local COPY_CONFIG_DIR="$HOME/.config/misc/configs/copy"
  local COPY_OPTIONS_DIR="$HOME/.local/share/misc/options/copy"
  local COPY_CUSTOM_COMMAND=''
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Argument/Option settings
  local SETARGS="${*}"
  local SHORTOPTS="a,l,c,v,h,s:,d:"
  local LONGOPTS="all,list,config,version,help,source:,dest:"
  local ARRAY=""
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Generate Files
  [ -f "$COPY_OPTIONS_DIR/options" ] || __list_options "$COPY_OPTIONS_DIR" "$ARRAY" &>/dev/null
  [ -f "$COPY_OPTIONS_DIR/array" ] || __list_array "$COPY_OPTIONS_DIR" &>/dev/null
  [ -f "$COPY_CONFIG_DIR/$COPY_CONFIG_FILE" ] || __gen_config &>/dev/null
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Import config
  [ -f "$COPY_CONFIG_DIR/$COPY_CONFIG_FILE" ] && . "$COPY_CONFIG_DIR/$COPY_CONFIG_FILE"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # options
  local setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -n "$PROG" -- "$@" 2>/dev/null)
  eval set -- "$setopts" 2>/dev/null
  while :; do
    case $1 in
    -a | --all)
      __list_options "$COPY_OPTIONS_DIR" "$ARRAY"
      exit $?
      ;;
    -l | --list)
      __list_array "$COPY_OPTIONS_DIR"
      exit $?
      ;;
    -v | --version)
      __version
      exit $?
      ;;
    -h | --help)
      __help
      exit $?
      ;;
    -c | --config)
      __gen_config
      exit $?
      ;;
    -s | --source)
      src="$2"
      shift 1
      ;;
    -d | --dest)
      dest="$2"
      shift 1
      ;;
    --)
      shift 1
      break
      ;;
      #*) break ;;
    esac
    shift
  done
  set -- "$SETARGS"
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # Check for required applications
  cmd_exists --error bash || exit 1
  cmd_exists --error dd || exit 1
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # begin main app
  typeset src="${1:-$src}"
  typeset dest="${2:-$dest}"
  typeset size="${size:-(stat -c%s "$src")}"
  [[ -d "$dest" ]] && dest="$dest/$(basename "$src")"
  if [ -n "$COPY_CUSTOM_COMMAND" ]; then
    $COPY_CUSTOM_COMMAND "$src" "$dest"
  elif [ -f "$(command -v pv)" ]; then
    dd if="$src" 2>/dev/null | pv -petrb -s "$size" 2>/dev/null | dd of="$dest" 2>/dev/null
  else
    dd if="$src" of="$dest" status=progress 2>/dev/null
  fi

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # lets exit with code
  return "${exitCode:-$?}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# execute function
copy_main "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
